<h2>Have something to say?</h2>

<div>
  <%= form_for @contact do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %><br>

    <br>

    <%= f.label :email %><br>
    <%= f.text_field :email, required: true %><br>

    <br>

    <%= f.label :message %><br>
    <%= f.text_area :message, as: :text %><br>

    <div class='hidden'>
      <%= f.label :nickname %><br>
      <%= f.text_field :nickname, hint: 'leave blank' %><br>
    </div>

    <%= f.submit 'Send Message', class: 'button' %>
  <% end %>
</div>
