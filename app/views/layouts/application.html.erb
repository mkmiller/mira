<!DOCTYPE html>
<html>
  <head>
    <title>Mira</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='nav-wrapper'>
      <nav class='nav-menu'>
        <ul class='clearfix'>
          <li>
            <%= link_to root_path do %>
              MIRA
            <% end %>
          </li>
          <li class='dropdown'>
            <%= link_to comics_path do %>
              Upcoming Comics
            <% end %>
            <ul class='sub-menu' style='margin-left: -8em;'>
              <% %w(A B C).each do |name| %>
                <li>
                  <%= link_to root_path do %>
                    Comic <%= name %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
          <li class='dropdown'>
            <%= link_to web_comics_path do %>
               Webcomics
            <% end %>
            <ul class='sub-menu'>
              <% %w(A B C).each do |name| %>
                <li>
                  <%= link_to root_path do %>
                    Webcomic <%= name %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
          <li class='dropdown'>
            <%= link_to anthologies_path do %>
              Anthologies
            <% end %>
            <ul class='sub-menu'>
              <% %w(A B C).each do |name| %>
                <li>
                  <%= link_to root_path do %>
                    Anthology <%= name %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
          <li>
            <%= link_to bio_path do %>
              Bio
            <% end %>
          </li>
          <li>
            <%= link_to contact_path do %>
              Contact
            <% end %>
          </li>
        </ul>
      </nav>
    </div>

    <%= yield %>
  </body>
</html>
