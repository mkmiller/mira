<div class="row">
  <div class="column">
    <h2>Anthologies</h2>
  </div>
</div>

<div class="row">
  <div class="column">
    <% @anthologies.each do |anthology| %>
      <% if anthology.comics.present? %>
      <% anthology.comics.each do |comic| %>
        <%= link_to image_tag(comic.artworks.first.file, alt: anthology.name, height: '200'),
        anthology_path(anthology) %>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>
